<div class="post_box">


  <h2><%= link_to "#{article.title}", article_path(article) %></h2>
  <div class="news_meta">Posted on <%= article.created_at %></div>
  <% if article.image.present? %>
      <div class="image_wrapper">
        <%= link_to image_tag(article.image.thumb.url, :alt => "image1"), article_path(article) %>
      </div>
  <% end %>

  <p align="justify">
    <%= article.text %>
    <br>

    <%= link_to "Continue..", article_path(article), {:class => 'continue'} %>
  </p>

  <div class="cleaner"></div>
</div>

<hr>