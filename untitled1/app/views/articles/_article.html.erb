<div class="post">

  <!-- Post Details -->
  <div class="post_inf">

    <span>
      <%= article.created_at.strftime("%-d %B") %>
    </span>
    <br/>

    <%= link_to "#{article.comments.count > 0 ? article.comments.count : "No"} Comments", article_path(article), {:class => 'posc'} %>

  </div>

  <!-- Post Title - Permalink -->
  <h1>
    <%= link_to "#{article.title}", article_path(article) %>
  </h1>

  <!-- Post Content -->
  <% if article.image.present? %>
      <%= link_to image_tag(article.image.thumb.url, :alt => "post_pic1"), article_path(article) %>
  <% end %>
  <p>
    <%= article.text %>
  </p>
</div>