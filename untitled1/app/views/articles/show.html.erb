<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<br>

<% if @article.image.present? %>
    <p>
      <%= image_tag @article.image.thumb.url %>
    </p>
<% end %>

<% if @article.comments.present? %>
    <h2>Comments</h2>
    <% for comment in @article.comments %>
        <%= render :partial => 'comments/articleComment', :locals => {:comment => comment} %>
    <% end %>

<% end %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<br>

<%= link_to 'Edit |', edit_article_path(@article) if admin? %>
<%= link_to 'Back', root_path %>